@if (Model?.Torrents?.Count > 0)
{
    <div class="MyTableList">
        <table>
            <th>
                Name
            </th>
            <th>Created</th>
            <th>Size</th>
            <th>Downloads</th>
            <th>Seeders</th>
            <th>Leechers</th>
            <th>Actions</th>
            @foreach (var item in Model.Torrents)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Date</td>
                    <td>@item.Size</td>
                    <td>@item.Downloads</td>
                    <td>@item.Seeders</td>
                    <td>@item.Leechers</td>
                    <td><a href="/Torrents/DownloadTorrent?torrentId=@item.Id&name=@item.Name.Replace(" ","_")" class="btn btn-primary">Download</a></td>
                </tr>
            }
        </table>
    </div>
}

